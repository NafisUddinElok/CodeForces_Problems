#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);  

    while (t--) {
        int n, sum = 0, num;
        scanf("%d", &n);  

        for (int i = 0; i < n; i++) {
            scanf("%d", &num);  
            sum += num;  
        }

        printf("%d\n", sum - n + 1); 
    }

    return 0;
}
